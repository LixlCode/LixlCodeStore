<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="探索全球"
        android:textColor="#333333"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/international_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/common_icon_next_arrow"
        android:text="出行回顾"
        android:textColor="#ff999999"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/total_num"
        android:textSize="9dp"
        android:textColor="#999999"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        tools:text="2个国家/地区"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/country_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.wecome.demo.view.SimulateEarth
            android:id="@+id/simulate_earth"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/country_normal_0"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="75dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="国际化"/>

        <View
            android:id="@+id/country_empty_0"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignLeft="@id/country_normal_0"
            android:layout_alignTop="@id/country_normal_0"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:alpha="0.3"
            android:background="@mipmap/user_center_inter_bg"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/country_normal_1"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="37dp"
            android:layout_marginTop="32dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="国家1"/>

        <View
            android:id="@+id/country_empty_1"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignLeft="@id/country_normal_1"
            android:layout_alignTop="@id/country_normal_1"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:alpha="0.3"
            android:background="@mipmap/user_center_inter_bg"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/country_normal_2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="26dp"
            android:layout_marginRight="4dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="国家2"/>

        <View
            android:id="@+id/country_empty_2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_alignLeft="@id/country_normal_2"
            android:layout_alignTop="@id/country_normal_2"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="13.5dp"
            android:alpha="0.3"
            android:background="@mipmap/user_center_inter_bg"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/country_normal_3"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="27dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="国家3"/>

        <View
            android:id="@+id/country_empty_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@id/country_normal_3"
            android:layout_alignTop="@id/country_normal_3"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="13.5dp"
            android:alpha="0.3"
            android:background="@mipmap/user_center_inter_bg"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/country_normal_4"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="44dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="国家4"/>

        <View
            android:id="@+id/country_empty_4"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignLeft="@id/country_normal_4"
            android:layout_alignTop="@id/country_normal_4"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="1.5dp"
            android:alpha="0.3"
            android:background="@mipmap/user_center_inter_bg"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/country_normal_5"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="42dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="国家5"/>

        <View
            android:id="@+id/country_empty_5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@id/country_normal_5"
            android:layout_alignTop="@id/country_normal_5"
            android:layout_marginLeft="6.5dp"
            android:layout_marginTop="6.5dp"
            android:alpha="0.3"
            android:background="@mipmap/user_center_inter_bg"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/city_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/city_county"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="40dp"
            android:background="@mipmap/user_center_inter_bg"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="9dp"
            tools:text="日本"/>
        <RelativeLayout
            android:id="@+id/city_detail"
            android:layout_alignTop="@id/city_county"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/city_county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/city_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#68ce4f"
                android:textSize="13dp"
                tools:text="2个城市"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/city_num"
                android:layout_below="@id/city_num"
                android:layout_marginTop="4dp"
                android:text="我已去过"
                android:textColor="#999999"
                android:textSize="9dp"/>

            <View
                android:id="@+id/city_line"
                android:layout_width="19dp"
                android:layout_height="0.5dp"
                android:layout_alignTop="@id/city_num"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/city_num"
                android:background="#e5d5d5"/>

            <TextView
                android:id="@+id/city_name"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/city_num"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/city_line"
                android:lineSpacingExtra="7dp"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="12dp"
                tools:text="东京  大阪  东京  大阪  大阪  东京  大阪"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/city_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/map_country"/>
    </RelativeLayout>

</RelativeLayout>