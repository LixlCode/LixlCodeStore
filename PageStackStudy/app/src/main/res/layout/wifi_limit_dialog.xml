<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/wifi_limit_dialog_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示："
        android:textSize="16sp"
        android:padding="8dp"
        android:background="@color/wifi_tip_tv_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wifi_tip_bg"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="由于系统限制，无法自动开启wifi，请手动开启wifi！"
        android:textSize="14sp"
        android:gravity="center_vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wifi_tip_bg"/>

    <TextView
        android:id="@+id/tv_open_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="前往wifi设置页面"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/wifi_limit_dialog_selector"/>

