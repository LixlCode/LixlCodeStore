<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baidu.demo">

    <!--华为hicar权限-->
    <uses-permission android:name="com.huawei.hicar.HICAR_PERMISSION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="huawei.intent.action.HICAR"/>
                <category android:name="huawei.intent.category.HICAR"/>
            </intent-filter>

        </activity>


        <activity android:name=".HiCarActivity">
            <!--<intent-filter>
                <action android:name="huawei.intent.action.hicar.MAP"/>
                <category android:name="huawei.intent.category.hicar.MAP"/>
            </intent-filter>-->
        </activity>

        <provider
            android:name=".HiCarLauncherContentProvider"
            android:authorities="com.baidu.demo"
            android:enabled="true"
            android:exported="true"
            android:permission="com.huawei.hicar.HICAR_PERMISSION">
            <intent-filter>
                <action android:name="com.huawei.hicar.ACTION_CARD_READY"/>
            </intent-filter>
        </provider>

    </application>

</manifest>